{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": "src"
  },
  "include": ["./src/**/*", "./src/types/twin.d.ts"],
  "exclude": ["node_modules", "public", ".cache"]
}
