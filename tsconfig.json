{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "src"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "public", ".cache"]
}
